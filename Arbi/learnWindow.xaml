<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arbi"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/" x:Class="Arbi.learnWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#3a2d58"
        Title="Learn" Height="695" Width="1077">
    <Grid>
        <WebBrowser Margin="269,0,402.4,0.6" x:Name="q"/>
        <WebBrowser Margin="668,0,-0.2,0.2" x:Name="a"/>
        <Label Content="Learn" FontSize="80" Foreground="White"  FontFamily="{StaticResource Typo}" Panel.ZIndex="20" Margin="0,0,806.4,557.6"/>
        <Rectangle Fill="White" Margin="0,96,819.4,557.6" Panel.ZIndex="49"/>
        <Button Background="#b98cff" ToolTipService.ShowDuration="3000" ToolTipService.ToolTip="Next" BorderThickness="0" Name="nextBtn" Click="nextBtn_Click" Panel.ZIndex="100" Margin="10,518,819.4,45.6">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="50"/>
                </Style>
            </Button.Resources>
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="White" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="Border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2FADCC" TargetName="Border" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <svgc:SvgViewbox Source="assets/nextBtnIcon.svg" x:Name="svgNextBtn" Height="68" Width="74"/>
        </Button>
    </Grid>
</Window>
